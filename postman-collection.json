{
  "info": {
    "name": "Event Management API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Events",
      "item": [
        {
          "name": "Create Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/events",
              "host": ["{{baseUrl}}"],
              "path": ["events"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"eventName\": \"Startup Summit 2024\",\n  \"eventDate\": \"2024-12-31T10:00:00.000Z\",\n  \"organizer\": \"Sayyam Mehra\",\n  \"email\": \"sayyam.mehra@example.com\",\n  \"phone\": \"+91-9876543210\",\n  \"location\": {\n    \"street\": \"MG Road\",\n    \"city\": \"Bengaluru\",\n    \"state\": \"Karnataka\",\n    \"zip\": \"560001\"\n  }\n}"
            }
          }
        },
        {
          "name": "Get All Events",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/events",
              "host": ["{{baseUrl}}"],
              "path": ["events"],
              "query": [
                {
                  "key": "organizer",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "city",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "fromDate",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "toDate",
                  "value": "",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Event by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/events/{{eventId}}",
              "host": ["{{baseUrl}}"],
              "path": ["events", "{{eventId}}"]
            }
          }
        },
        {
          "name": "Update Event",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/events/{{eventId}}",
              "host": ["{{baseUrl}}"],
              "path": ["events", "{{eventId}}"]
            },
            "body": {
              "mode": "raw",
              "raw": {
                "eventName": "Updated Tech Conference 2024",
                "location": {
                  "city": "Los Angeles"
                }
              }
            }
          }
        },
        {
          "name": "Delete Event",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/events/{{eventId}}",
              "host": ["{{baseUrl}}"],
              "path": ["events", "{{eventId}}"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "eventId",
      "value": "",
      "type": "string"
    }
  ]
}
